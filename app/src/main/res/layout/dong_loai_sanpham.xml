<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp">

    <RelativeLayout
        android:id="@+id/relativeCategoryPage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:background="@drawable/round_bk2">

        <TextView
            android:id="@+id/titleCategoryPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:text="Robusta"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonExpandCategoryPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:padding="20dp"
            android:text="Tất cả" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageCategoryPage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/categories_robustar_icon" />
</RelativeLayout>